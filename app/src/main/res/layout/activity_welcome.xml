<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".welcome">

    <ImageView
        android:background="@drawable/reqlat"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </ImageView>
    <TextView
        android:textSize="40dp"
        android:text="Create Account To Start"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"></TextView>
    
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/organiser"
            android:layout_width="200dp"
            android:layout_height="100dp"

            android:elevation="10dp"
            android:text="I am Organiser"
            app:backgroundTint="@color/royal">></Button>

        <TextView
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="OR"/>

        <Button
            android:id="@+id/user"
            android:elevation="10dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="I am User"
            app:backgroundTint="@color/royal"></Button>
        
    </LinearLayout>

</LinearLayout>