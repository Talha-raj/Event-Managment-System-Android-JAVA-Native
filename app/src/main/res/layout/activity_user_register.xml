<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundnew"
    android:layout_height="match_parent"
    tools:context=".registration">
    <TextView
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="User Register"
        android:textColor="@color/white"
        android:textAlignment="center" android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginTop="280dp"
            android:src="@drawable/signup"
            android:layout_width="150dp"
            android:layout_height="100dp" />

        <EditText
            android:id="@+id/reg_username"
            android:layout_width="match_parent"
            android:hint="NAME"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/reg_useremail"
            android:layout_width="match_parent"
            android:hint="Email"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/reg_usercontact"
            android:layout_width="match_parent"
            android:hint="Contact"
            android:inputType="number"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/reg_userpass"
            android:layout_width="match_parent"
            android:hint="Set Password"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_height="60dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_userbtn"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="Register"
            app:backgroundTint="@android:color/holo_blue_dark"></com.google.android.material.button.MaterialButton>

        <TextView
            android:id="@+id/already_useracc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="I Already Have an Account? "
            android:textAlignment="center"
            android:textSize="25dp" />




    </LinearLayout>

</RelativeLayout>