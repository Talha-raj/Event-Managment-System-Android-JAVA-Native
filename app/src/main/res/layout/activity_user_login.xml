<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundnew"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="User LOGIN"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_marginTop="210dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="500dp">


        <ImageView
            android:layout_width="200dp"
            android:padding="10dp"
            android:src="@drawable/user3"
            android:layout_height="200dp"></ImageView>

        <EditText
            android:id="@+id/useremail"
            android:layout_width="300dp"
            android:inputType="textEmailAddress"
            android:hint="Your Email" android:textAlignment="center" android:textSize="20dp"
            android:layout_height="65dp"></EditText>
        <EditText
            android:id="@+id/userpass"
            android:layout_width="300dp"
            android:inputType="textPassword"
            android:hint="Your Password" android:textAlignment="center" android:textSize="20dp"
            android:layout_height="65dp"></EditText>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/userlogin"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="LOGIN"
            app:backgroundTint="@android:color/holo_blue_dark"></com.google.android.material.button.MaterialButton>

        <TextView
            android:id="@+id/create_useracc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I don't have an Account"
            android:textAlignment="center"
            android:textSize="20dp"/>

    </LinearLayout>


</RelativeLayout>